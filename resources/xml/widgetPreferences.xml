<?xml version="1.0" encoding="utf-8" ?>
<preferences>
	<preference name="windowLevel">
		<type>select</type>
		<options>
			<option value="1">Keep widget on top of other windows</option>
			<option value="0">Normal</option>
			<option value="2">Keep widget below of other windows</option>
		</options>
		<default>0</default>
		<title>Window Level</title>
		<category>Windows</category>
		<description>You can set the widget to always on top or below.</description>
	</preference>
	<preference name="snapToScreen">
		<type>checkbox</type>
		<title>Snap to screen</title>
		<category>Windows</category>
		<default>0</default>
		<description>Check this option to make the widget snap to screen edges.</description>
	</preference>
