	<preference name="ignoreDrag">
		<type>checkbox</type>
		<title>Prevent dragging</title>
		<category>Windows</category>
		<default>0</default>
		<description>Check this option to prevent the widget from being moved by dragging.</description>
	</preference>
	<preference name="opacity" max="255" min="5" interval="25">
		<type>slider</type>
		<title>Opacity</title>
		<category>Windows</category>
		<default>220</default>
	<description>Set the opacity level of the widget. Set the level to zero to use the global default opacity level.</description>
	</preference>
	<preference name="grayScaled">
		<type>checkbox</type>
		<title>Grayscale</title>
		<category>Windows</category>
		<default>0</default>
		<description>Check this option to make the widget grayscaled.</description>
	</preference>
